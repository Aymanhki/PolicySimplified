{
    "manifest_version": 3,
    "name": "Policy Simplified",
    "version": "1.0",
    "description": "AI-powered legal document simplifier",
    "permissions": ["activeTab", "scripting", "https://generativelanguage.googleapis.com/"],
    "action": {
      "default_popup": "popup/popup.html"
    },
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content.bundle.js"]
    }],
    "background": {
      "service_worker": "background.bundle.js"
    }
  }