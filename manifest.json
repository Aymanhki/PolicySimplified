{
    "manifest_version": 3,
    "name": "Policy Simplified",
    "version": "1.0",
    "description": "Simplify legal documents with AI-powered summaries",
    "permissions": ["activeTab", "scripting", "https://generativelanguage.googleapis.com/"],
    "action": {
      "default_popup": "popup/popup.html"
    },
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }],
    "background": {
      "service_worker": "background.js"
    }
  }